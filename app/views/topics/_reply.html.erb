<%= simple_form_for Post.new, html: { class: "form-horizontal" } do |f| %>
  <%= f.input :topic_id, as: :hidden, input_html: { value: topic_id } %>
  <%= f.input :body, input_html: { class: 'form-control' }, placeholder: 'Resposta', label: false %>
  <%= f.submit 'Postar', class: 'btn btn-default' %>
<% end %>
