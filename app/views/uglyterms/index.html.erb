<p id="notice"><%= notice %></p>

<h1>Listing Uglyterms</h1>

<table>
  <thead>
    <tr>
      <th>Term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uglyterms.each do |uglyterm| %>
      <tr>
        <td><%= uglyterm.term %></td>
        <td><%= link_to 'Show', uglyterm %></td>
        <td><%= link_to 'Edit', edit_uglyterm_path(uglyterm) %></td>
        <td><%= link_to 'Destroy', uglyterm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Uglyterm', new_uglyterm_path %>
